<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="OrderPaymentProxyEP" xmlns="http://ws.apache.org/ns/synapse">
    <address statistics="enable" trace="enable" uri="http://localhost:8290/services/OrderPaymentProxy">
        <timeout>
            <duration>10000</duration>
        </timeout>
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>3</retriesBeforeSuspension>
            <retryDelay>1000</retryDelay>
        </markForSuspension>
    </address>
</endpoint>
